<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@drawable/bg2"
   tools:context=".HomeActivity">

   <!-- Profile Image -->
   <ImageView
       android:id="@+id/profileImage"
       android:layout_width="60dp"
       android:layout_height="60dp"
       android:layout_marginStart="16dp"
       android:layout_marginTop="16dp"
       android:src="@drawable/profile_image"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <!-- Header Text -->
   <TextView
       android:id="@+id/floraBlissText"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="FLORAL BLISS"
       android:textColor="#4B1B33"
       android:textSize="34sp"
       android:textStyle="bold"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toEndOf="@id/profileImage"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.5"
       android:layout_marginStart="16dp" />

   <!-- Marquee Text -->
   <TextView
       android:id="@+id/marqueeText"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:ellipsize="marquee"
       android:marqueeRepeatLimit="marquee_forever"
       android:singleLine="true"
       android:text="Sale! Sale! Sale!"
       android:textColor="#FF0000"
       android:textSize="24sp"
       app:layout_constraintTop_toBottomOf="@id/floraBlissText"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginTop="16dp" />

   <!-- Countdown Timer -->
   <TextView
       android:id="@+id/countdownText"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Sale Ends In: 00:00:00"
       android:textColor="#4B1B33"
       android:textSize="20sp"
       android:textStyle="bold"
       app:layout_constraintTop_toBottomOf="@id/marqueeText"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginTop="16dp" />

   <!-- GridLayout for Buttons -->
   <GridLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:columnCount="2"
       app:layout_constraintTop_toBottomOf="@id/countdownText"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginTop="32dp">

       <!-- Birthday Button -->
       <Button
           android:id="@+id/birthdayButton"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Bday Special"
           android:layout_margin="16dp" />

       <!-- Valentine Special Button -->
       <Button
           android:id="@+id/valentineSpecialButton"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Valentine Special"
           android:layout_margin="16dp" />

       <!-- Pooja Essentials Button -->
       <Button
           android:id="@+id/poojaEssentialsButton"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Pooja Essentials"
           android:layout_margin="16dp" />

       <!-- Personalized Button -->
       <Button
           android:id="@+id/personalizedButton"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Personalized"
           android:layout_margin="16dp" />
   </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
